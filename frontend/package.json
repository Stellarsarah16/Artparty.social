{
  "name": "artparty-social-frontend",
  "version": "1.0.0",
  "description": "Frontend tests for ArtPartySocial",
  "main": "index.js",
  "scripts": {
    "test": "jest --config=../tests/test.config.js",
    "test:watch": "jest --config=../tests/test.config.js --watch",
    "test:coverage": "jest --config=../tests/test.config.js --coverage",
    "test:unit": "jest --config=../tests/test.config.js --testPathPattern=frontend/unit",
    "test:integration": "jest --config=../tests/test.config.js --testPathPattern=frontend/integration",
    "test:browser": "echo \"Opening browser test runner...\" && echo \"Please open http://localhost/tests/test-runner.html in your browser\"",
    "test:summary": "jest --config=../tests/test.config.js --coverage --verbose && echo \" Test run completed!\" && echo \" Open tests/results/test-report.html for detailed results\" && echo \"ðŸ“ˆ Open tests/coverage/lcov-report/index.html for coverage report\""
  },
  "keywords": [],
