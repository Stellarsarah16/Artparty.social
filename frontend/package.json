    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jsdom": "^23.0.1",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "jest-html-reporter": "^3.1.0",
    "jest-junit": "^16.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
